<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:textSize="28dp"
        android:background="@color/green"
        android:paddingEnd="65dp"
        android:layout_height="wrap_content"
        android:text="Welcome to XYZ hotel" />

    <TextView
        android:id="@+id/textView2"
        android:layout_marginTop="60dp"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Accomodation" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/studioRadio"
            android:textSize="20sp"
            android:text="Studio $1500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/arbnbRadio1"
            android:text="AIRBNB (1bd) $2500"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/airbnbRadio2"
            android:textSize="20sp"
            android:text="AIRBNB (1bd) $3500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/stdRadio"
            android:textSize="20sp"
            android:text="Studio and Breakfast $2000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/airbnbRadio3"
            android:textSize="20sp"
            android:text="AIRBNB (1bd) and Breakfast $3000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/airbnbRadio4"
            android:textSize="20sp"
            android:text="AIRBNB (2bd) and Breakfast $4000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RadioGroup>
    <Button
        android:id="@+id/button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="40dp"
        android:textSize="20dp"
      android:backgroundTint="@color/red"
        android:text="CLEAR" />

    <Button
        android:id="@+id/button2"
        android:layout_marginLeft="200dp"
        android:layout_width="130dp"
        android:layout_marginTop="450dp"
        android:textSize="20dp"
        android:backgroundTint="@color/blue"
        android:layout_height="wrap_content"
        android:text="SUBMIT" />

</RelativeLayout>
